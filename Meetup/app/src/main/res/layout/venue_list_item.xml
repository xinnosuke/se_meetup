<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="@dimen/padd_10">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/venue_list_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="@dimen/activity_padding_horizontal"
            android:contentDescription="@string/venue_image"
            android:scaleType="centerCrop"
            android:background="@color/colorSecondBar"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/venue_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/venue_list_image"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textColor="@color/item_name"
            android:textSize="17sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/venue_list_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/venue_list_image"
            android:layout_below="@id/venue_list_name"
            android:textColor="@color/description"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/venue_list_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/venue_list_image"
            android:layout_below="@id/venue_list_location"
            android:textColor="@color/colorTextHint"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>