<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_page_frame_registered"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xin.meetup.event.EventPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_image_registered"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/dinner">
        </ImageView>

        <TextView
            android:id="@+id/event_title_registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="@color/colorYellow"
            android:paddingTop="30dp"
            android:paddingLeft="35dp"
            android:layout_marginBottom="0dp"
            android:textSize="25sp"/>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="5dp"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="6"
            android:alignmentMode="alignBounds"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/textView4_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_where"
                android:textStyle="bold"
                android:layout_row="0"/>
            <TextView
                android:id="@+id/event_location_textView_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Location"
                android:layout_column="0"
                android:layout_row="1"
                android:paddingBottom="5dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:layout_row="1"
            android:layout_marginVertical="20dp">

            <TextView
                android:id="@+id/textView3_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:text="@string/event_when"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/event_dateTime_textView_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Date/Time"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/textView5_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/event_category"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"/>

            <TextView
                android:id="@+id/event_category_textView_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Category"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"/>

            <TextView
                android:id="@+id/textView6_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/event_capacity"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"/>
            <TextView
                android:id="@+id/event_capacity_textView_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Capacity"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"/>

            <TextView
                android:id="@+id/textView7_registered"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/event_organizer"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"/>

            <TextView
                android:id="@+id/event_organizer_textView"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Organizer"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:paddingBottom="5dp"/>

        </GridLayout>
            <TextView
                android:id="@+id/textView8_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_description"
                android:textStyle="bold"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/event_description_textView_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Description"
                android:layout_row="4"/>

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_row="5"
                android:text="Register"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorYellow" />
        </GridLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
