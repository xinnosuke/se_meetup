<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/venue_page_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextForBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@color/colorYellow">

        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            android:src="@drawable/greenpoint_cafe">
        </ImageView>

        <TextView
            android:id="@+id/venue_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Venue Name"
            android:textColor="@color/colorBottomBar"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingStart="30dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/venue_location_textView"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Location "
                        android:textColor="@color/colorTextForBar"
                        android:textSize="17sp"
                        android:inputType="textPostalAddress"
                        android:layout_column="1"/>

                    <TextView
                        android:id="@+id/venue_cost"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="$$$$$"
                        android:textColor="@color/colorTextForBar"
                        android:textSize="17sp"
                        android:paddingTop="3dp"
                        android:paddingStart="30dp"
                        android:layout_column="0"/>
                </TableRow>
            </TableLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="5dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="25dp"
            android:paddingStart="20dp">

            <TableRow
                android:background="@color/colorEventPageBackground">
                <ImageView
                    android:src="@drawable/ic_contact"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/venue_phone_textView"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="phone"
                    android:inputType="phone"/>
            </TableRow>

            <TableRow
                android:background="@color/colorEventPageBackground">
                <TextView
                    android:id="@+id/venue_email_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:text="email"
                    android:inputType="textEmailAddress"/>
            </TableRow>

            <TableRow
                android:background="@color/colorEventPageBackground">
                <ImageView
                    android:src="@drawable/ic_hours"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/venue_hours_extView"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="hours" />
            </TableRow>


            <TableRow
                android:background="@color/colorEventPageBackground">
                <ImageView
                    android:src="@drawable/ic_capacity"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/venue_capacity_textView"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:paddingStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="capacity" />
            </TableRow>

            <TableRow
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:paddingStart="10dp"
                    android:text="DETAILS:" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/venue_description_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:paddingStart="10dp"
                    android:text="contents" />

            </TableRow>
        </TableLayout>

        <!--<com.google.android.gms.maps.MapView-->
            <!--android:id="@+id/mapView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
